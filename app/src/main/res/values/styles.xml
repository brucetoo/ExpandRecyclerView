<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppThemeFullScreen" parent="android:Theme.NoTitleBar">
        <item name="android:windowFullscreen">true</item>
    </style>

    <declare-styleable name="SwipeableLayout">
        <attr name="dragMaxWidth" format="dimension" />
        <attr name="dragView" format="reference" />
        <attr name="contentView" format="reference" />
    </declare-styleable>

</resources>
