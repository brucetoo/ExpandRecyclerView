<?xml version="1.0" encoding="utf-8"?>
<com.brucetoo.expandrecyclerview.ScrollableLayout
    android:id="@+id/scroll_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:headerMaxHeight="160dp"
    app:headerMinHeight="50dp"
    app:headerView="@+id/layout_header">

    <FrameLayout
        android:id="@+id/layout_header"
        android:layout_width="match_parent"
        android:layout_height="160dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@mipmap/img_bg"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="80dp">

            <View
                android:id="@+id/img_icon"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="20dp"
                android:background="@android:color/holo_blue_light"
                />

            <TextView
                android:id="@+id/txt_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/img_icon"
                android:text="TITLE"
                android:textColor="@android:color/black"
                android:textSize="25sp"
                />

            <TextView
                android:id="@+id/txt_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_title"
                android:layout_toRightOf="@+id/img_icon"
                android:text="DESCRIPTION"
                android:textColor="@android:color/black"
                />

            <Button
                android:id="@+id/btn_click"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:text="BUTTON"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:id="@+id/img_back"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:background="@mipmap/ic_launcher"
                />

            <Space
                android:id="@+id/space_title"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignBottom="@+id/img_back"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/img_back"
                />

            <Space
                android:id="@+id/space_btn"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_alignBottom="@+id/img_back"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"/>

        </RelativeLayout>

    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:id="@+id/list_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </RelativeLayout>

</com.brucetoo.expandrecyclerview.ScrollableLayout>
